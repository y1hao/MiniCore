@model IEnumerable<MiniCore.Reference.Models.ShortLinkDto>
@{
    ViewData["Title"] = "Admin - URL Shortener";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/css/admin.css" />
</head>
<body>
    <div class="container">
        <h1>URL Shortener Admin</h1>
        
        <div class="add-form">
            <h2 style="margin-top: 0; margin-bottom: 20px; font-size: 1.2em;">Add New Short Link</h2>
            <form id="addLinkForm">
                <div class="form-group">
                    <label for="originalUrl">Original URL <span style="color: #dc3545;">*</span></label>
                    <input type="url" id="originalUrl" name="originalUrl" required placeholder="https://example.com">
                </div>
                <div class="form-row">
                    <div class="form-group">
                        <label for="shortCode">Custom Short Code <span class="optional-label">(optional)</span></label>
                        <input type="text" id="shortCode" name="shortCode" placeholder="my-custom-link" pattern="[a-zA-Z0-9_-]+" maxlength="20">
                        <small style="color: #6c757d; font-size: 0.85em;">Letters, numbers, hyphens, and underscores only (max 20 chars)</small>
                    </div>
                    <div class="form-group">
                        <label for="expiresAt">Expiration Date <span class="optional-label">(optional)</span></label>
                        <input type="datetime-local" id="expiresAt" name="expiresAt">
                    </div>
                </div>
                <div id="messageContainer"></div>
                <button type="submit" class="submit-btn" id="submitBtn">Create Short Link</button>
            </form>
        </div>
        
        @if (Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Short Code</th>
                        <th>Original URL</th>
                        <th>Created At</th>
                        <th>Expires At</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var link in Model)
                    {
                        <tr>
                            <td>
                                <span class="short-code">@link.ShortCode</span>
                            </td>
                            <td>
                                <a href="@link.OriginalUrl" target="_blank" class="original-url" title="@link.OriginalUrl">
                                    @link.OriginalUrl
                                </a>
                            </td>
                            <td>@link.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>
                                @if (link.ExpiresAt.HasValue)
                                {
                                    var isExpired = link.ExpiresAt.Value < DateTime.UtcNow;
                                    <span class="@(isExpired ? "expired" : "")">
                                        @link.ExpiresAt.Value.ToString("yyyy-MM-dd HH:mm")
                                        @if (isExpired)
                                        {
                                            <span>(Expired)</span>
                                        }
                                    </span>
                                }
                                else
                                {
                                    <span>Never</span>
                                }
                            </td>
                            <td>
                                <button class="delete-btn" data-link-id="@link.Id">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-links">
                <p>No short links found. Create one using the form above!</p>
            </div>
        }
    </div>

    <script src="~/js/admin.js"></script>
</body>
</html>

